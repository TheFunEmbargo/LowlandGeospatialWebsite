---
import { Icon } from "astro-icon/components";
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";
const features: Array<FeatureItem> = [
  {
    title: "Web App Tools",
    description:
      "Access your data and workflows through intuitive web apps built for speed, clarity, and ease of use.",
    icon: "mdi:web",
  },
  {
    title: "GIS & Geospatial",
    description:
      "Visualise and analyse location-based data to unlock insights and make smarter decisions across your operations.",
    icon: "mdi:map-outline",
  },
  {
    title: "Data Pipelines",
    description:
      "Streamline your data flow with automated pipelines, moving information cleanly and efficiently across systems.",
    icon: "mdi:pipe",
  },
  {
    title: "Data Warehouses",
    description:
      "Centralise your datasets in a reliable, scalable warehouse to make insights accessible when and where you need them.",
    icon: "mdi:database",
  },
  {
    title: "Document Lifecycle",
    description:
      "Manage your documents effortlessly from creation to archival, ensuring teams always have the right files at the right time.",
    icon: "mdi:file-document-outline",
  },
  {
    title: "Seamless Data Access",
    description:
      "Always-on, ready-to-use data empowers your team to move faster, make decisions smarter, and innovate continuously.",
    icon: "mdi:cloud-sync-outline",
  },
];
---

<ContentSection title="Our Capabilities" id="features">
  <Fragment slot="lead">
    Tools to help you deliver faster.
    <span class="text-primary">Version documents</span>,
    <span class="text-primary">access data seamlessly</span>, and
    <span class="text-primary">automate workflows</span>. Imagine if that
    spreadsheet was a <span class="text-primary">web app</span>.
  </Fragment>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      features.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6">
          <div class="size-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} class="size-full" />
          </div>
          <p class="text-center font-extrabold text-xl">{title}</p>
          <p class="text-center text-offset text-sm">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
